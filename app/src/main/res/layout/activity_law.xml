<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/WhiteSmoke"
    tools:context=".vid.Activity.LawActivity"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card_view:cardElevation="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/name"
                            android:gravity="start|center_vertical"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />
                        <TextView
                            android:id="@+id/lNameId"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="@string/na"
                            android:gravity="start|center_vertical"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Case: "
                            android:gravity="start|center_vertical"
                            android:layout_gravity="center"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />
                        <TextView
                            android:id="@+id/lCaseId"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="@string/na"
                            android:gravity="start|center_vertical"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Pending Cases"
                            android:gravity="start|center_vertical"
                            android:layout_gravity="center"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />
                        <TextView
                            android:id="@+id/lPendingCasesId"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="@string/na"
                            android:gravity="start|center_vertical"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Case File No:"
                            android:gravity="start|center_vertical"
                            android:layout_gravity="center"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />
                        <TextView
                            android:id="@+id/lCaseFileNoId"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="@string/na"
                            android:gravity="start|center_vertical"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Case Details:"
                            android:gravity="start|center_vertical"
                            android:layout_gravity="center"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />
                        <TextView
                            android:id="@+id/lCaseDetails"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="@string/na"
                            android:gravity="start|center_vertical"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />


                    </LinearLayout>





                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>



    </ScrollView>



</LinearLayout>
