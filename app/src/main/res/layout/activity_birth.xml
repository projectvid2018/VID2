<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".vid.Activity.BirthActivity"
    android:background="@color/Wheat"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/passportPageId"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        card_view:cardElevation="15dp"
        card_view:cardCornerRadius="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/SkyBlue"
            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/birth"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="@string/birth"
                android:textSize="30sp"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/White"
                android:textStyle="bold"/>


        </LinearLayout>


        <Button
            android:id="@+id/backButtonId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/back"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/button_background"
            />

    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".75"
                        android:text="@string/name"
                        android:gravity="start|center_vertical"
                        android:textColor="#000"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        />
                    <TextView
                        android:id="@+id/nameBirthId"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:hint="@string/na"
                        android:gravity="start|center_vertical"
                        android:textColor="#000"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".75"
                        android:text="@string/date_of_birth"
                        android:gravity="start|center_vertical"
                        android:textColor="#000"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                    <TextView
                        android:id="@+id/dateBirthId"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:hint="@string/na"
                        android:gravity="start|center_vertical"
                        android:textColor="#000"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".75"
                        android:text="@string/sex"
                        android:gravity="start|center_vertical"
                        android:textColor="#000"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                    <TextView
                        android:id="@+id/sexBirthId"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:hint="@string/na"
                        android:gravity="start|center_vertical"
                        android:textColor="#000"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".75"
                        android:text="@string/place_of_birth"
                        android:gravity="start|center_vertical"
                        android:textColor="#000"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                    <TextView
                        android:id="@+id/birthPlaceID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.25"
                        android:hint="@string/na"
                        android:gravity="start|center_vertical"
                        android:textColor="#000"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".75"
                        android:text="@string/father_s_name"
                        android:gravity="start|center_vertical"
                        android:layout_gravity="center"
                        android:textColor="#000"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                    <TextView
                        android:id="@+id/fatherNameBirthID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:hint="@string/na"
                        android:gravity="start|center_vertical"
                        android:textColor="#000"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".75"
                        android:text="@string/mother_s_name"
                        android:gravity="start|center_vertical"
                        android:layout_gravity="center"
                        android:textColor="#000"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                    <TextView
                        android:id="@+id/bMotherNameID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:hint="@string/na"
                        android:gravity="start|center_vertical"
                        android:textColor="#000"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".9"
                        android:text="@string/permanent_address"
                        android:gravity="start|center_vertical"
                        android:layout_gravity="center"
                        android:textColor="#000"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                    <TextView
                        android:id="@+id/bPermanentAddressID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:hint="@string/na"
                        android:gravity="start|center_vertical"
                        android:textColor="#000"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />


                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </ScrollView>



</LinearLayout>