<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Wheat"
    android:orientation="vertical"
    android:theme="@style/Theme.Design.Light.NoActionBar"
    tools:context="com.example.explorer.vid.start.activity.SignupActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/ict"
                />
            <!-- NID number -->
            <EditText
                android:id="@+id/nidId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NID no."
                android:textStyle="bold"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_pin"/>

            <!-- Username -->
            <EditText
                android:id="@+id/userNameId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Choose Username"
                android:textStyle="bold"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_user"
                android:layout_marginTop="5dp"/>


            <!-- Date of Birth -->



            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Birth"
                android:textStyle="bold"
                android:inputType="date"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_date"
                android:id="@+id/day_picker_selected_date_layout"/>

            <!-- Phone number -->
            <EditText
                android:id="@+id/phoneNoId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone no."
                android:textStyle="bold"
                android:inputType="phone"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_phone"/>

            <!-- Email -->
            <EditText
                android:id="@+id/emailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email id"
                android:textStyle="bold"
                android:inputType="textEmailAddress"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_mail"/>

            <!-- Password -->

            <EditText
                android:id="@+id/passwordId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Password"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_pass"
                />

            <ProgressBar
                android:id="@+id/progressbarId"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />


            <!-- Sign Up -->
            <android.support.v7.widget.CardView
                android:id="@+id/SignupId"
                android:onClick="SignUp"
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="25dp"
                android:layout_marginBottom="50dp"
                app:cardBackgroundColor="@color/md_blue_400"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/sign_up"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>


    </ScrollView>

</LinearLayout>
