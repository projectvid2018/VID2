<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/Wheat"
    tools:context=".start.activity.CheckingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:src="@drawable/ict"
            />

        <EditText
            android:id="@+id/checkingNidId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nid"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:inputType="number"
            android:drawableStart="@drawable/ic_user"/>

        <ProgressBar
            android:id="@+id/checkingProgressBarId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            />
        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/date_birth"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:inputType="date"
            android:textStyle="bold"
            android:id="@+id/checkingBirthId"
            android:drawableStart="@drawable/ic_date"/>


        <android.support.v7.widget.CardView
            android:onClick="Verification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="5dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/md_green_500"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/check"
                android:textColor="@color/White"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/checkingNextBtnId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="5dp"

            app:cardBackgroundColor="@color/md_green_500"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NEXT"
                android:textColor="@color/White"
                android:textSize="30sp"
                android:textStyle="bold"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="center" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>