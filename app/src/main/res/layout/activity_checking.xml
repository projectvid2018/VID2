<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/WhiteSmoke"
    tools:context="com.example.explorer.vid.start.activity.CheckingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="30dp"
            android:padding="10dp"
            android:src="@drawable/ict"
            android:layout_margin="20dp"
            android:layout_gravity="top"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:cardElevation="2dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="5dp">

            <EditText
                android:id="@+id/checkingNidId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nid"
                android:textColorHint="@color/md_green_400"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:textColor="@color/Teal"
                android:layout_gravity="top"
                android:inputType="number"
                android:drawableStart="@drawable/ic_person_24dp" />


            <EditText
            android:id="@+id/checkingBirthDateId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"
                android:textColorHint="@color/md_green_400"
            android:padding="20dp"
            android:layout_margin="5dp"
                android:layout_gravity="bottom"
                android:textColor="@color/Teal"
            android:inputType="date"
            android:drawableStart="@drawable/ic_date_24dp"/>

        <ProgressBar
            android:id="@+id/checkingProgressBarId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            />

</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/checkButtonId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/md_green_500"
        app:cardCornerRadius="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="8dp"
            android:gravity="center"
            android:text="@string/check"
            android:textColor="@color/White"
            android:textSize="30sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/checkingNextBtnId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="5dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/md_green_500"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NEXT"
                android:textColor="@color/White"
                android:textSize="30sp"
                android:textStyle="bold"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="center" />

        </android.support.v7.widget.CardView>

    <at.markushi.ui.CircleButton
        android:id="@+id/circleCheckId"
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:elevation="5dp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        app:cb_color="@color/md_green_400"
        android:layout_gravity="center"
        app:cb_pressedRingWidth="15dip"
        android:layout_marginTop="20dp"/>

    </LinearLayout>

</ScrollView>



