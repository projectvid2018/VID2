<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/WhiteSmoke"
    tools:context=".vid.Activity.VisaActivity"
    >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card_view:cardElevation="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/name"
                            android:gravity="start|center_vertical"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />
                        <TextView
                            android:id="@+id/vNameId"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="@string/na"
                            android:gravity="start|center_vertical"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/nid_s"
                            android:gravity="start|center_vertical"
                            android:layout_gravity="center"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />
                        <TextView
                            android:id="@+id/visaNidId"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="@string/na"
                            android:gravity="start|center_vertical"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Visa Issued Country:"
                            android:gravity="start|center_vertical"
                            android:layout_gravity="center"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />
                        <TextView
                            android:id="@+id/visaIssuedCountryId"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="@string/na"
                            android:gravity="start|center_vertical"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Reason of Going:"
                            android:gravity="start|center_vertical"
                            android:layout_gravity="center"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />
                        <TextView
                            android:id="@+id/reasonOfGoingId"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="@string/na"
                            android:gravity="start|center_vertical"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Visa Issue Session:"
                            android:gravity="start|center_vertical"
                            android:layout_gravity="center"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />
                        <TextView
                            android:id="@+id/visaIssueSessionId"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="@string/na"
                            android:gravity="start|center_vertical"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Departure Date:"
                            android:gravity="start|center_vertical"
                            android:layout_gravity="center"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />
                        <TextView
                            android:id="@+id/departureDateId"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="@string/na"
                            android:gravity="start|center_vertical"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Arrival Date:"
                            android:gravity="start|center_vertical"
                            android:layout_gravity="center"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />
                        <TextView
                            android:id="@+id/arrivalDateId"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="@string/na"
                            android:gravity="start|center_vertical"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Flight No:"
                            android:gravity="start|center_vertical"
                            android:layout_gravity="center"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />
                        <TextView
                            android:id="@+id/visaFlightNoId"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="@string/na"
                            android:gravity="start|center_vertical"
                            android:textColor="#000"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            />


                    </LinearLayout>





                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>



    </ScrollView>


</LinearLayout>
